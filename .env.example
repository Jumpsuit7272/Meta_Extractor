# RPD Meta Extractor - Environment Configuration
# Copy this file to .env and update the values as needed.

# --- Server ---
RPD_HOST=0.0.0.0
RPD_PORT=8000

# --- Storage ---
RPD_UPLOAD_DIR=uploads
RPD_RESULT_DIR=results
RPD_MAX_UPLOAD_MB=500

# --- Extraction ---
RPD_DEFAULT_EXTRACTOR=builtin
RPD_OCR_ENABLED=true
# RPD_TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
RPD_GEOLOCATION_LOOKUP_ENABLED=true

# --- Comparison ---
RPD_DEFAULT_SIMILARITY_THRESHOLD=0.95
RPD_NORMALIZE_DATES=true
RPD_NORMALIZE_CURRENCY=true

# --- Storage Backend (local | s3) ---
RPD_STORAGE_BACKEND=local
# RPD_S3_BUCKET=my-bucket
# RPD_S3_REGION=us-east-1

# --- Async (Celery/Redis) ---
# RPD_REDIS_URL=redis://localhost:6379/0
# RPD_CELERY_BROKER=redis://localhost:6379/0
# RPD_CELERY_RESULT_BACKEND=redis://localhost:6379/0
